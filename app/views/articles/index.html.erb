<h1>Index of the page</h1>

<%= link_to  "Create a new article", new_article_path,class:"btn btn-primary" %>

<div align="center">
    <% @articles.each do |article|%>
    <div class="card">
        <h2 class="card-header"><%=article.title%></h2>
        <div class="card-body">
            <h5 class="card-title"><%=article.description%></h5>
            <p class="card-text">Createds by: <%=article.user.username%>
                <%=time_ago_in_words(article.created_at)%> ago

            </p>
            <%= link_to  "Edit", edit_article_path(article),class:"btn btn-success"  %>
            <%= link_to "Show", article_path(article),class:"btn btn-primary"  %>
            <%=link_to "Delete",article_path(article),method: :delete,data:{confirm:"Are you sure?"},class:"btn btn-danger"%>
        </div>
    </div>
    <br>
    <% end %>
</div>