<%=render 'shared/error',obj:@article%>
<%=form_for @article do |f|%>
 <div class = "col-sm-8"> 
    <div class="form-group">
      <%=f.label :title%>
      <%=f.text_field :title,class:"form-control",placeholder:"Title of article"%>
    </div> 
    <div class="form-group">
      <%=f.label :description%>
      <%=f.text_area :description,class:'form-control',placeholde:"Description of the article",rows:5%>
    </div>
    <%=f.submit "Create",class:"btn btn-primary" %>
 </div>      
<% end %>
<div align = "center">
  <h6> [<%= link_to  "Cancel request and return to articles listing", articles_path %>]</h6>
</div>