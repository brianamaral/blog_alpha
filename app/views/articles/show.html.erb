
<h1 align = "center"> Title: <%=@article.title %> </h1>
<div class = "well col-xs-8 col-xs-offset-2">
    <div class="card">
        <h2 class="card-header center">Description:</h2>
        <div class="card-body">
            <h5 class="card-title center"><%=@article.description%></h5>
            <div class = "article-actions center">
                <%= link_to  "Edit this article", edit_article_path(@article),class:"btn btn-primary btn-xs"  %>
                <%=link_to "Delete this article",article_path(@article),method: :delete,data:{confirm:"Are you sure?"},class:"btn btn-danger"%>
                <%= link_to "View all articles", articles_path,class:"btn btn-success btn-xs"  %>
                
            </div>
        </div>
    </div>
</div>